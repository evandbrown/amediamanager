#
# Retrieve information about where application configuration
# is stored from the environment
#
option_settings:
  - option_name: S3_CONFIG_KEY
    value: "config/env/generic.properties"
# 
# Execute a Python script that will push config from the env
# to S3 if the config isn't already in S3
#
container_commands:
  create_config_file:
    command: "python WEB-INF/.ebextensions/deploy_config.py"
    leader_only: true